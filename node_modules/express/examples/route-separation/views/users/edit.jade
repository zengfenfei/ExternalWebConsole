extends ../layout

block content
  h1 Editing #{user.name}
  #user
    form(method="post")
      input(type="hidden", value="put", name="_method")
      p Name: 
        input(type="text", value= user.name, name="user[name]")
      p Email: 
        input(type="text", value= user.email, name="user[email]")
      p 
        input(type="submit", value="Save")
